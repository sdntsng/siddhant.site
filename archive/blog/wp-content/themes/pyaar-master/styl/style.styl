/*
  Theme Name: Pyaar
  Theme URI: http//symmetrycode.com/
  Description: Namanyay Goel's theme for Symmetrycode, based on Genesis Sample by Studio Press
  Author: Namanyay Goel
  Text Domain: pyaar
*/

// @import 'partials/_base.css'
@import 'partials/_base'
@import 'partials/_var'

// HACK FOR EB GARAMOND
strong
  font-weight 400 !important
  font-style italic

/* ==========================================================================
   2. General - Setting up some base styles
   ========================================================================== */

html
  height 100%
  max-height 100%
  font-size 100%

body
  height 100%
  max-height 100%
  font-family $font-prim
  font-size 1.5em
  line-height 1.62
  color $color-font
  -webkit-font-smoothing antialiased

::selection
  color white
  background $color-prim
  text-shadow none

h1, h2, h3,
h4, h5, h6
  text-rendering optimizeLegibility
  line-height 1
  margin-top 0
  font-family $font-sec
  font-weight 700

h1
  font-size 1.75em
  line-height (2.5em/@font-size)

h2
  font-size 1.25em
  line-height 1.2em

h3
  font-size 1.25em

h4
  font-size 1.125em

h5
  font-size 1em

h6
  font-size 1em

a
  transition all ease 0.3s
  text-decoration none
  border-bottom 2px solid rgba($color-border, 0)
  color $color-prim
  outline none !important

a:hover
  color mix($color-prim, $color-font)
  border-bottom-color $color-border

h1 a, h2 a, h3 a,
h4 a, h5 a, h6 a
  color $color-prim

p, ul, ol, dl
  margin 1.5em 0

ol
  list-style-type lower-roman

ul
  list-style-type circle
  padding-left 1em

li
  padding .25em 0

ol ol, ul ul,
ul ol, ol ul
  margin 0.4em 0

ul li
  list-style none

  &:before
    content '–'
    margin 0 .4em 0 -1em
    font-weight 900
    position relative
    top -1px
    opacity .25 

dl dt
  float left
  width 180px
  overflow hidden
  clear left
  text-align right
  text-overflow ellipsis
  white-space nowrap
  font-weight bold
  margin-bottom 1em

dl dd
  margin-left 200px
  margin-bottom 1em

hr
  display block
  height 1px
  border 0
  border-top 1px solid $color-border
  margin 3.2em 0
  padding 0

blockquote
  -moz-box-sizing border-box
  box-sizing border-box
  margin 1.6em 0 1.6em -2.2em
  padding 0 0 0 1.6em
  border-left $color-border 0.4em solid

blockquote p
  margin 0.8em 0
  font-style italic

blockquote small
  display inline-block
  margin 0.8em 0 0.8em 1.5em
  font-size 0.9em
  color #ccc

blockquote smallbefore 
  content '\2014 \00A0'

blockquote cite
  font-weight bold

blockquote cite a 
  font-weight normal

mark
  background-color #ffc336

code, tt
  padding .25em .35em
  font-family Inconsolata, monospace, sans-serif
  font-size 0.625em
  white-space pre-wrap
  border 1px solid $color-border--dark
  background $color-bg--light
  border-radius 2px
  vertical-align middle
  -webkit-text-stroke 0

pre
  -moz-box-sizing border-box
  box-sizing border-box
  margin 1.6em 0
  border 1px solid $color-border--dark
  width 100%
  padding 1em
  font-family Inconsolata, Consolas, Monaco, 'Courier New', Courier, 'Lucida Sans Typewriter', 'Lucida Typewriter', monospace
  font-size .625em
  white-space pre
  overflow auto
  background $color-bg--light
  border-radius 3px

pre code, tt
  font-size inherit
  white-space -moz-pre-wrap
  white-space pre-wrap
  background transparent
  border none
  padding 0

kbd
  display inline-block
  margin-bottom 0.4em
  padding 1px 8px
  border #ccc 1px solid
  color #666
  text-shadow #fff 0 1px 0
  font-size 0.9em
  font-weight bold
  background #f4f4f4
  border-radius 4px
  box-shadow 0 1px 0 rgba(0, 0, 0, 0.2),
    0 1px 0 0 #fff inset

strikeafter, safter, delafter
  content ' '
  border-top 1px solid $color-border
  top 50%
  position absolute
  left -2px
  right -2px
  margin-top 2px

strike, s, del
  text-decoration none
  position relative
  color $color-font--light

table
  -moz-box-sizing border-box
  box-sizing border-box
  margin 1.6em 0
  width 100%
  max-width 100%
  background-color transparent

table th,
table td
  padding 8px
  line-height 20px
  text-align left
  vertical-align top
  border-top 1px solid $color-border

table th 
  color $color-font--dark

table caption + thead tr:first-child th,
table caption + thead tr:first-child td,
table colgroup + thead tr:first-child th,
table colgroup + thead tr:first-child td,
table thead:first-child tr:first-child th,
table thead:first-child tr:first-child td
  border-top 0

table tbody + tbody 
  border-top 2px solid $color-border

table table table 
  background-color #fff

table tbody > tr:nth-child(odd) > td,
table tbody > tr:nth-child(odd) > th
  background-color #f6f6f6

table.plain tbody > tr:nth-child(odd) > td,
table.plain tbody > tr:nth-child(odd) > th
   background transparent

iframe, .fluid-width-video-wrapper
  display block
  margin 1.6em 0

/* When a video is inside the fitvids wrapper, drop the
margin on the iframe, cause it breaks stuff. */
.fluid-width-video-wrapper iframe
  margin 0

.post img
  max-width 100%

.btn
  background $color-prim
  color white
  font-size .75em
  padding .75em 1em
  line-height 1
  border none
  box-sizing border-box
  border thin solid $color-prim

  &:hover
    background white
    border thin solid $color-prim
    color $color-prim
  
  &--tertiary
    border-color rgba($color-prim, 0)
    background white
    color $color-font--lighter
    display inline-block
      
.post,
.wrap,
.nav-links
  max-width 90%
  width 40em 
  width 60rem
  margin 0 auto


/* ==========================================================================
   3. Utilities - These things get used a lot
   ========================================================================== */

/* Clears shit */
.clearfix:before,
.clearfix:after
  content " "
  display table
.clearfix:after 
  clear both
.clearfix 
  *zoom 1

/* Hides shit */
.hidden
  text-indent -9999px
  visibility hidden
  display none

/* Creates a responsive wrapper that makes our content scale nicely */
.inner
  position relative
  width 80%
  max-width 700px
  margin 0 auto

/* Centres vertically yo. (IE8+) */
.vertical
  display table-cell
  vertical-align middle


/* ==========================================================================
   4. General - The main styles for the the theme
   ========================================================================== */

.site-header
  font-size .75em
  top (1.5em/@font-size)
  font-family $font-sec
  text-align center
  padding 2em 0
  background $color-bg--light !important
  border-bottom thin solid darken($color-bg--light, 4%)

.site-header h1
  margin 0 0 .625em
  font-weight 400

  a
    white-space nowrap
    border-bottom 0

.site-title 
  a
    &:hover
      color $color-prim
      
      img
        margin 0 .5em 0 0

  img
    display inline-block
    vertical-align middle
    height 1em
    position relative
    top -2px
    margin 0 .375em 0 0
    transition all .2s ease

.site-description
  margin 1em 0

.header__social
  margin-top 0.6em
  font-size 1.25em

.header__social a + a
  margin-left .25em

.menu-toggle
  display none

.nav-menu
  margin 0
  display flex
  justify-content center
  align-items center
  
  li:before
    content none
  
  li + li
    &:before
      content '·'
      margin 0 .75em
      display inline-block
      vertical-align middle

  a
    text-transform lowercase
    font-weight 900
    border none !important
    display inline-block
    vertical-align middle

.menu-item
  a[href^="mailto"]
    background $color-prim
    color white
    padding .15em .5em 0
    margin-top -.15em
    font-weight 500
    
    &:hover
      background darken($color-prim, 25%)

/* Every post, on every page, gets this style on its <article> tag */
.content
  overflow hidden

.posts
  overflow hidden
  padding-bottom .5em

.post
  position relative
  word-break break-word
  hyphens auto
  padding 3em 0

.home__post
  border-bottom $color-border--light 1px solid

  &:after
    display block
    content "***"
    position absolute
    bottom -.75em
    left 50%
    margin-left -1.5em
    background #fff
    width 3em
    line-height 1
    text-align center
    color $color-border--dark
    letter-spacing .25em

.post-title
  text-align center
  margin 0
  font-size 1.5em

.post-title a
  color $color-font
  text-decoration none
  border-bottom none

.post-title a:hover
  color $color-prim

.post-excerpt p
  margin 1.6rem 0 0 0
  font-size 0.9em
  line-height 1.6em

.post-meta
  display block
  text-align center
  font-family $font-sec
  font-size .75em
  margin (.5em/@font-size) 0 (.25em/@font-size)
  color $color-font--lighter

.user-meta
  position relative
  padding 0.3rem 40px 0 100px
  min-height 77px

.user-image
  position absolute
  top 0
  left 0

.user-name
  display block
  font-weight bold

.user-bio
  display block
  max-width 440px
  font-size 1.4rem
  line-height 1.5em

.publish-meta
  position absolute
  top 0
  right 0
  padding 4.3rem 0 4rem 0
  text-align right

.publish-heading
  display block
  font-weight bold

.publish-date
  display block
  font-size 1.4rem
  line-height 1.5em

@keyframes wiggle
  0%
    transform translateX(0)
  100%
    transform translateX(.25em)

.read-more
  margin 1.25em 0 0
  text-align center
  
  i
    display inline-block
    font-style normal

  a:hover i
    animation wiggle .75s ease infinite both alternate

.nav-links
  font-size .75em
  margin 1em auto
  display flex
  justify-content space-between
  
  a
    border none

    &:hover
      border none
      color $color-font--lighter

.nav-previous
  flex 1 0 0
  padding-right 1em
  a:before
    content '←'
    padding-right .375em

.nav-next
  flex 1 0 0
  padding-left 1em
  text-align right
  a:after
    content '→'
    padding-left .375em


/* ==========================================================================
   5. Single Post - When you click on an individual post
   ========================================================================== */


/* Tweak the .post wrapper style */
.post-template .post
  margin-top 0
  padding-bottom 1em

/* Insert some mad padding up in the header for better spacing */
.post-template .post-header
  padding 60px 0
  text-align center

.post-template .blog-title
  display inline-block
  padding 2.5rem 0

.post-content
  -webkit-text-stroke .15px

/* Keep images centred and within the bounds of the post-width */
.post-content img
  display block
  max-width 100%
  height auto
  margin 0 auto
  padding 0.6em 0

/* Break out larger images to be wider than the main text column
   the class is applied with jQuery */
.post-content .full-img
  width 126%
  max-width none
  margin 0 -13%

/* Headings */

.home-template h1, .archive-template h1
  font-size 1.5em
  line-height (2.25em/@font-size)

.post h2
  margin 1.92em 0 1.28em -1em 

.post h2:before
  content '\00A7'
  color $color-border
  vertical-align top
  position relative
  margin 0 .5em 0 0
  top -2px

.post h3
  margin 2.4em 0 .8em -.85em
  padding 0 0 .1em .75em
  border-left .1em solid $color-border
  font-size 1em

.post__discuss
  margin-left -.85em
  padding 0 0 .1em .75em
  border-left .1em solid $color-border
  transition all .3s ease

.post__discusshover
  border-left-color $color-prim

.post__discuss a
  border-bottom none

.post__discuss ahover
  color $color-prim

/* The author credit area after the post */
.post-footer
  font-family $font-sec
  color $color-font--lighter
  position relative
  padding 2em 0 0 0
  text-align center
  font-size .75em
  
  a
    border-bottom-color $color-border
    color inherit
    
    &:hover
      color $color-prim

.post-footer h4
  font-size 1.8rem
  margin 0

.post-footer p
  margin 1rem 0
  font-size 1.4rem
  line-height 1.6em


/* Drop the share links in the space to the right.
   Doing it like this means it's easier for the author bio
   to be flexible at smaller screen sizes while the share
   links remain at a fixed width the whole time */

.post-footer .share a
  display inline-block
  margin 1rem 1.6rem 1.6rem 0



/* ==========================================================================
   6. Tag archive
   ========================================================================== */

.archive-template .site-head
  height auto
  padding-bottom 5rem

.archive-template .site-head a
  color #fff

.archive-template .blog-logo
  display block
  margin-top 5rem

.tag-archive-header
  padding 20px 0
  text-align center
  max-width 700px
  margin 4rem auto
  border-bottom 1px solid #EBF2F6
  position relative

.tag-archive-headerafter
  display block
  content ""
  width 7px
  height 7px
  border $color-border 1px solid
  position absolute
  bottom -5px
  left 50%
  margin-left -5px
  background #fff
  -webkit-border-radius 100%
  -moz-border-radius 100%
  border-radius 100%
  box-shadow #fff 0 0 0 5px

.archive-template .blog-title
  display inline-block
  padding 2.5rem 0

/* ==========================================================================
   7. Third Party Elements - Embeds from other services
   ========================================================================== */

/* Github */

.gist table
  margin 0
  font-size 1.4rem

.gist .line-number
  min-width 25px
  font-size 1.1rem


/* ==========================================================================
   8. Pagination - Tools to let you flick between pages
   ========================================================================== */

/* The main wrapper for our pagination links */
.pagination
  position relative
  font-family $font-sec
  color #9EABB3
  text-align center
  font-size .825em
  post-width @font-size
  margin-top (2em/@font-size)

.pagination a
  color #9EABB3

/* Push the previous/next links out to the left/right */
.older-posts,
.newer-posts
  position absolute
  display inline-block
  padding .125em .75em
  border #EBF2F6 .1em solid
  text-decoration none
  border-radius 30px
  transition all ease 0.3s
  top 0

.older-posts
  right 0

.page-number
  display inline-block
  padding .225em 0

.newer-posts
  left 0

.older-postshover,
.newer-postshover
  color $color-prim
  border-color $color-prim


/* ==========================================================================
   9. Footer - The bottom of every page
   ========================================================================== */

.site-footer
  clear both
  position relative
  padding 4em 0
  font-family $font-sec
  font-size .625em
  margin (2.5em/@font-size) 0 0 0
  line-height 1.7em
  color $color-font--light
  text-align center
  border-top thin solid darken($color-bg--light, 4%)
  background $color-bg--light


/* ==========================================================================
   =MEDIA
   ========================================================================== */

@media (max-width 45em)
  body 
    font-size 1.25em

  .post h2, .post h3
    margin-left 0

  .site-footer 
    font-size .75em

@media (max-width 35em)
  body
    font-size 1.125em

  .home__post
    padding 2em 0

  .read-more
    a 
      border-color lighten($color-font--lighter, 50%)

@media (max-width 27.5em) 
  .menu-item
    display none
    
    &:first-child,
    &:last-child
      display block
